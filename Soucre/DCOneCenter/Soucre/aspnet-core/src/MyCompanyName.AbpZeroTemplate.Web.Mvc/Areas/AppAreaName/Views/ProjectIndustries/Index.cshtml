@using MyCompanyName.AbpZeroTemplate.Authorization
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.ProjectIndustries
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Startup
@model ProjectIndustriesViewModel
@{
ViewBag.CurrentPageName = AppAreaNamePageNames.Common.ProjectIndustries;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/AppAreaName/Views/ProjectIndustries/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("ProjectIndustries")' description='@L("ProjectIndustriesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_ProjectIndustries_Create))
        {
        <button id="CreateNewProjectIndustrieButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewProjectIndustrie")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="ProjectIndustriesTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetProjectIndustriesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NameIndustriesFilterId">@L("NameIndustries")</label>
                            <input type="text" class="form-control" name="nameIndustriesFilter" id="NameIndustriesFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="IsActiveFilterId">@L("IsActive")</label>
                        <select class="form-control" name="IsActiveFilter" id="IsActiveFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="0">@L("False")</option>
                            <option value="1">@L("True")</option>
                        </select>
                    </div>

                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="ProjectIndustriesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("NameIndustries")</th>
                                <th>@L("SumaryIndustries")</th>
                                <th>@L("IsActive")</th>
                                <th>@L("Logo")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>