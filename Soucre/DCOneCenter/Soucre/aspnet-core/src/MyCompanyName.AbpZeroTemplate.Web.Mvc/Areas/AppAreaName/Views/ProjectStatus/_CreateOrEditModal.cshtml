
@using System.Globalization
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Common.Modals
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.ProjectStatus
@model CreateOrEditProjectStatuModalViewModel
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditProjectStatu")) : L("CreateNewProjectStatu")))

<div class="modal-body">
    <div id="ProjectStatuInformationsTab">
        <form name="ProjectStatuInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
            <input type="hidden" name="id" value="@Model.ProjectStatu.Id" />
            }

            <div class="my-3">
                <label class="form-label" for="ProjectStatu_NameStatus">@L("NameStatus")</label>
                <input class="form-control" id="ProjectStatu_NameStatus" value="@Model.ProjectStatu.NameStatus" type="text" name="nameStatus" required />
            </div>

            <div class="my-3">
                <label class="form-label" for="ProjectStatu_SumaryStatus">@L("SumaryStatus")</label>
                <input class="form-control" id="ProjectStatu_SumaryStatus" value="@Model.ProjectStatu.SumaryStatus" type="text" name="sumaryStatus" />
            </div>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")